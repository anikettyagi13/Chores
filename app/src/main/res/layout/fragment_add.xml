<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="@color/colorPrimary">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimaryDark"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="POST"
                android:textColor="@android:color/white"
                android:fontFamily="@font/poppins_light"
                android:textSize="24dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                />
            <ImageView
                android:id="@+id/post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/add"
                android:layout_marginTop="12dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/add_post_edittext"
                android:layout_marginHorizontal="20dp"
                >

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/liked"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/comment"
                    android:layout_marginLeft="160dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/share"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                >
                <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="100dp"
                android:backgroundTint="@color/colorPrimary"
                >
                <ImageView
                    android:id="@+id/userImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/icon_image"
                    android:src="@drawable/profile_drawable"
                    android:backgroundTint="@color/colorPrimary"
                    />
            </androidx.cardview.widget.CardView>
                <RelativeLayout
                    android:id="@+id/userInfo"
                    android:layout_marginLeft="60dp"
                    android:layout_width="150sp"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="USER NAME"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/poppins_light"
                        android:textSize="14dp"
                        />
                    <EditText
                        android:id="@+id/price_tag"
                        android:layout_width="150sp"
                        android:layout_height="wrap_content"
                        android:hint="price tag($2, Rs 100)"
                        android:textColorHint="@android:color/white"
                        android:paddingHorizontal="5dp"
                        android:background="@drawable/edittext"
                        android:backgroundTint="@color/colorPrimary"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/poppins_light"
                        android:layout_below="@+id/username"
                        android:textSize="12dp"
                        />
                </RelativeLayout>

                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/pincode"
                    android:layout_width="wrap_content"
                    android:maxWidth="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@android:color/white"
                    android:background="@drawable/dialog_background"
                    android:padding="10dp"
                    android:fontFamily="@font/poppins_light"
                    android:text="PINCODE"
                    android:textSize="14dp"
                    android:layout_marginTop="3dp"
                    />
            </RelativeLayout>
            <ImageView
                android:id="@+id/addImage"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/ic_outline_image_24"

                android:background="@color/colorPrimary"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:id="@+id/username2"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="USER NAME"
                            android:paddingHorizontal="20dp"
                            android:textSize="13dp"
                            android:textColor="@android:color/white"
                            />
                        <TextView
                            android:id="@+id/exact_location"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="20dp"
                            android:text=" Exact Location"
                            android:textSize="12dp"
                            android:layout_marginBottom="10dp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            />
                    </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="Expires in"
                            android:layout_marginTop="4dp"
                            android:padding="10dp"
                            android:layout_marginHorizontal="20dp"
                            android:background="@drawable/dialog_background"
                            />
                    </RelativeLayout>
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <EditText
                            android:id="@+id/info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:padding="10dp"
                            android:textSize="12dp"
                            android:background="@drawable/add_post_edittext"
                            android:hint="Information about content"
                            android:layout_marginBottom="15dp"
                            android:textColorHint="@android:color/white"
                            android:textColor="@android:color/white"
                            />
                    </ScrollView>

                </LinearLayout>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/liked"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/comment"
                    android:layout_marginLeft="160dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/share"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@color/colorPrimaryDark"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/account_border"
                />
            <RelativeLayout
                android:layout_marginLeft="60dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/username3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="USER NAME"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="14dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/username3"
                    android:layout_height="wrap_content"
                    android:text="some Bio"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="12dp"
                    />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/white"
                android:fontFamily="@font/poppins_light"
                android:text="PINCODE"
                android:textSize="16dp"
                android:layout_marginTop="15dp"
                />
        </RelativeLayout>
    </LinearLayout>
    </FrameLayout>
