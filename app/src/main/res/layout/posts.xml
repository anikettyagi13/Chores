        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexWrap="wrap"
            android:visibility="gone"
            app:alignItems="stretch"
            app:alignContent="stretch"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            >
            <TextView
                android:visibility="gone"
                android:id="@+id/tag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_marginVertical="4dp"
                android:text="212312312"
                android:textSize="10sp"
                android:textColor="@android:color/darker_gray"
                android:paddingVertical="3dp"
                android:paddingHorizontal="5dp"
                android:background="@drawable/tags"
                />
            <TextView
                android:id="@+id/tag2"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_marginVertical="4dp"
                android:text="212312312"
                android:textSize="10sp"
                android:textColor="@android:color/darker_gray"
                android:paddingVertical="3dp"
                android:paddingHorizontal="5dp"
                android:background="@drawable/tags"
                />
            <TextView
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:id="@+id/tag3"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_marginVertical="4dp"
                android:text="212312312"
                android:textSize="10sp"
                android:textColor="@android:color/darker_gray"
                android:paddingVertical="3dp"
                android:paddingHorizontal="5dp"
                android:background="@drawable/tags"
                />
            <TextView
                android:id="@+id/tag4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="212312312"
                android:layout_marginHorizontal="4dp"
                android:layout_marginVertical="4dp"
                android:textSize="10sp"
                android:textColor="@android:color/darker_gray"
                android:paddingVertical="3dp"
                android:paddingHorizontal="5dp"
                android:background="@drawable/tags"
                />
            <TextView
                android:id="@+id/tag5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2123123"
                android:visibility="gone"
                android:textSize="10sp"
                android:layout_marginHorizontal="4dp"
                android:layout_marginVertical="4dp"
                android:textColor="@android:color/darker_gray"
                android:paddingVertical="3dp"
                android:paddingHorizontal="5dp"
                android:background="@drawable/tags"
                />

        </com.google.android.flexbox.FlexboxLayout>





        <TextView
            android:id="@+id/posts_created"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:gravity="center"
            android:textColor="@android:color/darker_gray"
            android:text="created"
            android:textSize="12dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/post_likes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@android:color/white"
                        android:layout_below="@+id/post_like"
                        android:layout_centerInParent="true"
                        />
                    <ImageView
                        android:id="@+id/post_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/like"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/post_comments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@android:color/white"
                        android:layout_below="@+id/post_comment"
                        android:layout_centerInParent="true"
                        />
                    <ImageView
                        android:id="@+id/post_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/comment"
                        />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/post_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/share"
                    android:layout_marginLeft="20dp"
                    />

            </LinearLayout>


            <ImageButton
                android:id="@+id/post_more"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/more"
                android:visibility="gone"
                android:background="@color/colorPrimaryDark"
                />
            <RelativeLayout
                android:layout_width="40sp"
                android:layout_alignParentRight="true"
                android:background="@drawable/circular_stroke"
                android:id="@+id/applyImage1"
                android:layout_height="40sp">
                <androidx.cardview.widget.CardView
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_centerInParent="true"
                    app:cardCornerRadius="15dp"
                    android:background="@color/colorPrimaryDark"
                    android:backgroundTint="@color/colorPrimaryDark"
                    >
                    <ImageView
                        android:id="@+id/applyImage"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:src="@drawable/account"
                        />
                </androidx.cardview.widget.CardView>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="40sp"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:id="@+id/rejected"
                android:layout_height="40sp">
                <androidx.cardview.widget.CardView
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_centerInParent="true"
                    app:cardCornerRadius="15dp"
                    android:background="@color/colorPrimaryDark"
                    android:backgroundTint="@color/colorPrimaryDark"
                    >
                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:src="@drawable/sad"
                        />
                </androidx.cardview.widget.CardView>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="40sp"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:id="@+id/waiting"
                android:layout_height="40sp">
                <androidx.cardview.widget.CardView
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_centerInParent="true"
                    app:cardCornerRadius="15dp"
                    android:background="@color/colorPrimaryDark"
                    android:backgroundTint="@color/colorPrimaryDark"
                    >
                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:src="@drawable/waiting"
                        />
                </androidx.cardview.widget.CardView>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="40sp"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:id="@+id/assigned"
                android:layout_height="40sp">
                <androidx.cardview.widget.CardView
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_centerInParent="true"
                    app:cardCornerRadius="15dp"
                    android:background="@color/colorPrimaryDark"
                    android:backgroundTint="@color/colorPrimaryDark"
                    >
                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:src="@drawable/happy"
                        />
                </androidx.cardview.widget.CardView>

            </RelativeLayout>


            <TextView
                android:id="@+id/applied"
                android:layout_width="40sp"
                android:layout_height="wrap_content"
                android:text="120"
                android:textColor="@android:color/darker_gray"
                android:textSize="11sp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:elevation="10dp"
                />
            </RelativeLayout>\
        <LinearLayout
            android:id="@+id/comment_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/post_comment_username"
                    android:text="username"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="14dp"
                    android:textColor="@android:color/white"
                    />
                <EditText
                    android:id="@+id/comment_write"
                    android:layout_height="wrap_content"
                    android:layout_width="300dp"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    android:maxHeight="80dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="10dp"
                    android:hint="comment"
                    android:textColorHint="@android:color/darker_gray"
                    android:textColor="@android:color/white"
                    android:textSize="14dp"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:background="@drawable/add_post_edittext"
                    />
            </LinearLayout>

            <ImageButton
                android:id="@+id/add_comment"
                android:layout_marginTop="12dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/add"
                android:background="@drawable/dialog_background"
                />
        </LinearLayout>

</LinearLayout>
</LinearLayout>