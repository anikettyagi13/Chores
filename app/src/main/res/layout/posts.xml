<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:animateLayoutChanges="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/stroke1dp"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            >
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="25dp"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/posts_userImage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/account_border"
                        android:backgroundTint="@color/colorPrimary"
                        />
                </androidx.cardview.widget.CardView>


            <RelativeLayout
                android:id="@+id/userInfo"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="5dp"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/posts_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="USER NAME"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="14dp"
                    />
                <TextView
                    android:id="@+id/posts_price_tag"
                    android:layout_width="wrap_content"
                    android:maxWidth="150sp"
                    android:layout_height="wrap_content"
                    android:hint="price tag"
                    android:textColorHint="@android:color/white"
                    android:paddingHorizontal="5dp"
                    android:background="@drawable/edittext"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/poppins_light"
                    android:layout_below="@+id/posts_username"
                    android:textSize="12dp"
                    />
            </RelativeLayout>
            <ImageView
                android:id="@+id/global"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/earth_selected"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                />
            <TextView
                android:gravity="center_vertical"
                android:id="@+id/posts_pincode"
                android:layout_width="wrap_content"
                android:maxWidth="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/white"
                android:padding="10dp"
                android:fontFamily="@font/poppins_light"
                android:text="PINCODE"
                android:textSize="14dp"
                android:layout_marginTop="3dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/colorPrimaryDark"
            android:layout_height="250dp">
            <ProgressBar
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/posts_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/ic_outline_image_24"
                android:background="@color/colorPrimary"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:id="@+id/posts_username2"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="USER NAME"
                            android:paddingHorizontal="20dp"
                            android:fontFamily="@font/poppins_light"
                            android:textSize="13dp"
                            android:textColor="@android:color/white"
                            />
                        <TextView
                            android:id="@+id/posts_exact_location"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="20dp"
                            android:text=" Exact Location"
                            android:textSize="12dp"
                            android:layout_marginBottom="5dp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            />
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="Expires in"
                        android:layout_marginTop="4dp"
                        android:padding="10dp"
                        android:layout_marginHorizontal="20dp"
                        android:background="@drawable/dialog_background"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/add_post_edittext"
                    android:layout_marginHorizontal="20dp"
                    >
                    <TextView
                        android:id="@+id/posts_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:paddingBottom="0dp"
                        android:textSize="12dp"
                        android:text="12323123123123"
                        android:textColor="@android:color/white"
                        />
                    <TextView
                        android:id="@+id/post_info_show_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginTop="-5dp"
                        android:text="see more"
                        android:textSize="12dp"
                        android:layout_marginLeft="10dp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/colorGreat"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
<!--        <com.google.android.material.chip.ChipGroup-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content">-->
<!--            <com.google.android.material.chip.Chip-->
<!--                android:layout_width="wrap_content"-->
